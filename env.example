# PostgreSQL Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=n8n

# n8n Basic Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_admin_password_here

# n8n Security - REQUIRED: Generate a strong random key (32+ characters)
# You can generate one with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your_encryption_key_here_min_32_chars

# n8n Network Configuration
N8N_PORT=5678
N8N_PROTOCOL=http
# If accessing from network, use your Raspberry Pi's IP address
# Example: WEBHOOK_URL=http://192.168.1.100:5678
WEBHOOK_URL=http://localhost:5678

# Timezone (use your local timezone)
# Examples: America/New_York, Europe/London, Asia/Tokyo
TZ=UTC

# Execution Data Settings
EXECUTIONS_DATA_SAVE_ON_ERROR=true
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336

# Optional: Diagnostics (set to false to disable telemetry)
N8N_DIAGNOSTICS_ENABLED=false

# ngrok Configuration (for exposing n8n to the internet)
# Get your auth token from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=your_ngrok_auth_token_here
# Optional: Region (us, eu, ap, au, sa, jp, in)
NGROK_REGION=us
# Optional: ngrok web interface port (default: 4040)
NGROK_WEB_PORT=4040

# Optional: Static domain (requires paid ngrok plan)
# To use static domain, uncomment the line below AND modify docker-compose.yml
# to add --domain=${NGROK_DOMAIN} to the ngrok command (after --region line)
# NGROK_DOMAIN=your-static-domain.ngrok-free.app

# Note: After starting ngrok, update WEBHOOK_URL above with your ngrok URL
# You can find it at: http://localhost:4040 (ngrok dashboard)
# Or if using static domain, set: WEBHOOK_URL=https://your-static-domain.ngrok-free.app

